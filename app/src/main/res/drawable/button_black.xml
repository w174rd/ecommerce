<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:drawable="@drawable/background_rounded_disabled" android:state_enabled="false" />

    <!-- pressed -->
    <item android:drawable="@drawable/background_rounded_black_pressed" android:state_enabled="true" android:state_pressed="true" />

    <!-- focused -->
    <item android:drawable="@drawable/background_rounded_black_pressed" android:state_enabled="true" android:state_focused="true" />

    <!-- enabled -->
    <item android:drawable="@drawable/background_rounded_black" android:state_enabled="true" />

</selector>